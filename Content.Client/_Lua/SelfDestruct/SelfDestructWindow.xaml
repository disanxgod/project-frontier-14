<DefaultWindow xmlns="https://spacestation14.io"
              Title="{Loc 'self-destruct-ui-title'}"
              MinSize="300 220">
  <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
    <PanelContainer Margin="0 0 0 5">
      <Label Name="FirstStatusLabel" />
    </PanelContainer>
    <PanelContainer Margin="0 0 0 5">
      <Label Name="SecondStatusLabel" />
    </PanelContainer>
    <BoxContainer Orientation="Horizontal">
      <GridContainer Columns="3" Name="KeypadGrid" Visible="False" />
      <BoxContainer Orientation="Vertical" Margin="10 0" HorizontalExpand="True">
        <Button Name="ConfirmWarningButton" Text="OK" Visible="False" Margin="0 0 0 5" />
        <Button Name="SavePinButton" Text="Сохранить PIN" Visible="False" Margin="0 0 0 5" />
        <Button Name="ArmButton" Text="Взвести" Visible="False" Disabled="True" Margin="0 0 0 5" />
        <Button Name="ClearButton" Text="Очистить" Visible="False" />
      </BoxContainer>
    </BoxContainer>
  </BoxContainer>
</DefaultWindow>


